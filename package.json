{
  "name": "cdk-monitoring",
  "version": "1.0.0",
  "description": "CDK project for CloudWatch monitoring across dev, staging, and prod environments",
  "bin": {
    "cdk-monitoring": "bin/app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:dev": "cdk deploy --all --profile dev --context environment=dev",
    "deploy:staging": "cdk deploy --all --profile staging --context environment=staging",
    "deploy:prod": "cdk deploy --all --profile prod --context environment=prod",
    "diff:dev": "cdk diff --all --profile dev --context environment=dev",
    "diff:staging": "cdk diff --all --profile staging --context environment=staging",
    "diff:prod": "cdk diff --all --profile prod --context environment=prod",
    "synth": "cdk synth"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3",
    "aws-cdk": "^2.110.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0"
  }
}
